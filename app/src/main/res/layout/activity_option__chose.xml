<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternalActivity">


    <Button
        android:id="@+id/btn_buatfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="BUAT FILE" />

    <Button
        android:id="@+id/btn_ubahfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="UBAH FILE" />

    <Button
        android:id="@+id/btn_bacafile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="BACA FILE" />

    <Button
        android:id="@+id/btn_hapusfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="HAPUS FILE" />

    <TextView
        android:id="@+id/teksbaca"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:inputType="textMultiLine"
        android:text="teksbaca"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>